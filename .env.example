# ============================================
# Netinfo Environment Configuration
# Copy this file to .env and fill in the values
# ============================================

# Admin Password Hash (SHA256)
ADMIN_PASSWORD_HASH=

# Statseeker API Credentials
STATSEEKER_USERNAME=
STATSEEKER_PASSWORD=

# NetDB API Credentials
NETDB_USERNAME=
NETDB_PASSWORD=

# Master Password (for credential management)
MASTER_PASSWORD=
MASTER_PASSWORD_HASH=

# JWT Secret (min 32 characters, use a random string)
JWT_SECRET=

# SSL Certificate Path (leave empty to use system default)
# Set to a CA bundle path if using self-signed certs
SSL_CERT_PATH=

# Application Data Paths
DATA_DIR=D:/INTRANET/Netinfo/Data
LOG_DIR=D:/INTRANET/Netinfo/logs/Latest_Logs
ARCHIVE_LOG_DIR=D:/INTRANET/Netinfo/Logs/Archived_Logs
SYSLOG_DIR=D:/INTRANET/Netinfo/Logs/Syslog_AI
PING_LOG_PATH=D:/INTRANET/Netinfo/Logs/PingStateChanges.log

# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://your-intranet-domain.com

# Flask Configuration
FLASK_DEBUG=false
FLASK_PORT=5000
