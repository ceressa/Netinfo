<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <EnableDefaultContentItems>false</EnableDefaultContentItems>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems> <!-- ğŸ”§ Derleme Ã§akÄ±ÅŸmalarÄ±nÄ± Ã¶nler -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo> <!-- ğŸ”§ Assembly attribute Ã§akÄ±ÅŸmalarÄ±nÄ± Ã¶nler -->
    <RazorScopedCssEnabled>false</RazorScopedCssEnabled>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Controllers\**\*.cs" />
    <Compile Include="Models\**\*.cs" />
    <Compile Include="Services\**\*.cs" />
