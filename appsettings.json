{
  "Logging": {
    "LogLevel": {
      "Default": "Information", // Varsayılan log seviyesi: Bilgi mesajları ve üzeri
      "System": "Information", // Sistem logları için bilgi seviyesi
      "Microsoft": "Warning", // Microsoft kütüphaneleri için sadece uyarılar ve hatalar
      "Microsoft.Hosting.Lifetime": "Information" // Uygulama ömrü ile ilgili bilgiler
    },
    "Console": { // Konsol çıktısı için log ayarları
      "LogLevel": {
        "Default": "Information", // Konsola bilgi seviyesi ve üzerini yaz
        "Microsoft": "Warning"
      }
    },
    "File": { // Dosya tabanlı loglama
      "Path": "logs/app.log", // Log dosyasının yolu
      "LogLevel": {
        "Default": "Trace", // Dosyaya tüm detayları yaz
        "Microsoft": "Warning"
      }
    }
  },
  "AllowedHosts": "*"
}
